mixin nav(nav)
  nav.nav
    each item in nav
      a.nav__link(href= item.link)= item.title

mixin button-oval(text)
  a(href="#" class="button-oval")= text

mixin button-type-a(link, text)
  a(href= link class="button-type-a" target="_BLANK")= text

mixin button-type-b(text)
  input(type="button" class="button-type-b" id="buttonTypeB" value= text)

mixin button-type-c(text)
  input(type="button" id="buttonTypeC" class="button-type-c" value= text)

mixin button-type-d(text, link)
  a(href= link class="button-type-d" target="_BLANK")= text

mixin card(numberPicture, titleHeader, cardText, loadPercentage, daysAweek, link)
  .card
    div(class="card__header-bg card__header-bg--picture-"+numberPicture)
      .label-new
    .card__content
      h4.card__title #{titleHeader}
      p.card__text #{cardText}
      .loading-scale
        .loading-scale__fill
      .article-details
        p.article-details__text #{loadPercentage}% Времени
        p.article-details__text #{daysAweek} дней в неделю
      .full-article
        a(href= link target="_BLANK").full-article__link Читать дальше

